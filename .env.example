# AI Provider API Keys (configure at least one)
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_key_here

# Optional: Memory Backend Configuration
MEMORY_BACKEND=local
LANCEDB_PATH=./data/lancedb

# Optional: Cloud Memory (Pinecone)
# PINECONE_API_KEY=your_pinecone_key
# PINECONE_INDEX=workflow-memory

# Optional: MCP Tool Server Configuration
# GITHUB_TOKEN=your_github_token
# SLACK_BOT_TOKEN=your_slack_token
# SLACK_TEAM_ID=your_team_id
# BRAVE_API_KEY=your_brave_key

# ===========================================
# Security & AI Agent Platform Configuration
# ===========================================

# API Authentication (REQUIRED for production)
# Generate a secure key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
DASHBOARD_API_KEY=your-secure-api-key-here

# Optional: Require auth in development (default: false)
# REQUIRE_AUTH_IN_DEV=false

# Budget Configuration (can also be set via UI)
# DEFAULT_BUDGET_LIMIT=5.00
# DEFAULT_BUDGET_PERIOD=day

# Security Configuration
# MINIMUM_SECURITY_SCORE=60
# AUTO_SECURITY_SCAN=true

# Permission Configuration
# DEFAULT_PERMISSION_LEVEL=confirm
# PERMISSION_TIMEOUT_MS=30000

# -------------------------------------------
# Demo Mode (RECOMMENDED: true for public deployments)
# -------------------------------------------
# When true, blocks dangerous MCP operations:
#   - File deletion/modification
#   - Git push/force push
#   - Shell command execution
#
# Use DEMO_MODE=true for:
#   - Public demos or shared instances
#   - Untrusted environments
#   - Learning/testing without risk
#
# Set DEMO_MODE=false for:
#   - Personal use on your own machine
#   - Production workflows that need full automation
#   - CI/CD pipelines
#
DEMO_MODE=true

# -------------------------------------------
# Server Configuration
# -------------------------------------------
# Port is configured in package.json (default: 3004)
# Development: npm run dev (runs on port 3004)
# Production: npm start (runs on port 3004)
